---
import { getVideoPath } from "../utils/video";

interface Props {
  src: string;
}

const { src } = Astro.props;
const videoPath = getVideoPath(src);
---

<video controls style="max-width: 800px; margin: 1rem auto; border-radius: 8px; overflow: hidden;" src={videoPath}>
  <source src={videoPath} type="video/mp4" />
  您的浏览器不支持视频播放。
</video>

<style>
  video {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    background: #000;
  }
</style>
