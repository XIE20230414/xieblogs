---
import { getImage } from "astro:assets";

interface Props {
  src: string;
  title?: string;
  poster?: string;
}

const { src, title = "视频", poster } = Astro.props;

// 直接使用 Astro 处理过的路径
const videoPath = src;

// 调试信息
console.log("Original src:", src);
console.log("Converted path:", videoPath);
---

<div class="video-container">
  <video
    controls
    preload="metadata"
    aria-label={title}
    style="max-width:800px;margin:1rem auto;border-radius:8px;overflow:hidden"
    src={videoPath}
    poster={poster}
  >
    <source src={videoPath} type="video/mp4" />
    <p>您的浏览器不支持 HTML5 视频播放。请尝试使用现代浏览器访问。</p>
  </video>
  <!-- 添加调试信息显示 -->
  <div class="debug-info" style="display: block;">
    <p>Original path: {src}</p>
    <p>Converted path: {videoPath}</p>
    <p>Full URL: {new URL(videoPath, Astro.url).toString()}</p>
    <p>Current URL: {Astro.url.toString()}</p>
  </div>
</div>

<style>
  .video-container {
    width: 100%;
    max-width: 800px;
    margin: 1rem auto;
  }

  video {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    background: #000;
  }

  .debug-info {
    margin-top: 1rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 4px;
    font-size: 0.875rem;
  }
</style>
